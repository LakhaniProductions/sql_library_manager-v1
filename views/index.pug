extends layout

block content
  h1= title
  p 
    a(class="button", href="/books/new") Create New Book 

  table
    thead 
      tr
        th Title
        th Author
        th Genre 
        th Year

    tbody
      each book in books
        tr
          td
            a(href=`/books/${book.id}`)= book.title
          td= book.author
          td= book.genre
          td= book.year
  - var n = 1;
  ul.buttons  
    while n <= buttons
      li.links
        a(href=`/books/page${n}`) 
          = n++


